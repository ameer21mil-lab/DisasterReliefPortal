@model IEnumerable<YourNamespace.Models.Task>

@{
    ViewData["Title"] = "My Assigned Tasks";
}

<div class="container mt-4">
    <h2 class="mb-4">My Assigned Tasks</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No tasks assigned yet.
        </div>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Task Name</th>
                    <th>Description</th>
                    <th>Due Date</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var task in Model)
                {
                    <tr>
                        <td>@task.Name</td>
                        <td>@task.Description</td>
                        <td>@task.DueDate.ToString("dd/MM/yyyy")</td>
                        <td>
                            @if (task.Progress == "Completed")
                            {
                                <span>Completed</span>
                            }
                            else if (task.Progress == "In Progress")
                            {
                                <span>In Progress</span>
                            }
                            else if (task.DueDate < DateTime.Now)
                            {
                                <span style="color: red;">Overdue</span>
                            }
                            else
                            {
                                <span>Pending</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <a asp-controller="Volunteer" asp-action="Dashboard" class="btn btn-primary">Back to Dashboard</a>
</div>