<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication1</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            line-height: 1.6;
            color: #333;
        }

        .navbar {
            background-color: #fff;
            border-bottom: 1px solid #dee2e6;
            padding: 1rem 2rem;
            display: flex;
            align-items: center;
            gap: 2rem;
        }

        .navbar-brand {
            font-weight: 600;
            font-size: 1.25rem;
            color: #000;
            text-decoration: none;
        }

        .navbar-nav {
            display: flex;
            list-style: none;
            gap: 1.5rem;
            margin: 0;
        }

        .nav-link {
            color: #000;
            text-decoration: none;
            transition: color 0.2s;
        }

        .nav-link:hover {
            color: #0066cc;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem;
        }

        .footer {
            border-top: 1px solid #dee2e6;
            padding: 1.5rem 2rem;
            margin-top: 3rem;
            color: #6c757d;
            font-size: 0.9rem;
        }

        .footer a {
            color: #0066cc;
            text-decoration: none;
        }

        .footer a:hover {
            text-decoration: underline;
        }

        h1, h2 {
            margin-bottom: 1.5rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 500;
        }

        input[type="text"],
        input[type="password"],
        input[type="number"],
        input[type="date"],
        textarea,
        select {
            width: 100%;
            padding: 0.5rem;
            border: 1px solid #ced4da;
            border-radius: 4px;
            font-size: 1rem;
        }

        textarea {
            min-height: 100px;
            resize: vertical;
        }

        .btn {
            padding: 0.5rem 1.5rem;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 1rem;
            transition: background-color 0.2s;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .checkbox-label {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-weight: normal;
        }

        .checkbox-label input[type="checkbox"] {
            width: auto;
        }

        .alert {
            padding: 1rem;
            margin-bottom: 1rem;
            border-radius: 4px;
        }

        .alert-success {
            background-color: #d4edda;
            border: 1px solid #c3e6cb;
            color: #155724;
        }

        .text-danger {
            color: #dc3545;
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }

        .dashboard-stats {
            margin-bottom: 2rem;
        }

        .panel {
            background-color: #e7e9f5;
            padding: 1rem 2rem;
            margin-top: 2rem;
            border-radius: 4px;
        }

        .panel a {
            color: #333;
            text-decoration: none;
            margin-right: 2rem;
        }

        .panel a:hover {
            color: #0066cc;
        }
    </style>
</head>
<body>
    <nav class="navbar">
        <a class="navbar-brand" href="/">Disaster Relief Support Portal</a>
        <ul class="navbar-nav">
            <li><a class="nav-link" href="/">Home</a></li>
            <li><a class="nav-link" href="/Home/Privacy">Privacy</a></li>
            <li><a class="nav-link" href="/Account/Register">Register</a></li>
            <li><a class="nav-link" href="/Account/Login">Login</a></li>
        </ul>
    </nav>

    <div class="container">
        @RenderBody()
        @RenderSection("Scripts", required: false)
    </div>

    <footer class="footer">
        &copy; 2025 - Disaster Relief Support Portal - <a href="/Home/Privacy">Privacy</a>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

</body>
</html>