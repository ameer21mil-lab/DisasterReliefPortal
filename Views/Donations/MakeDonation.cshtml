@model YourNamespace.Models.Donation

@{
    ViewData["Title"] = "Make a Donation";
}

<h2>Make a Donation</h2>

<form asp-controller="Donations" asp-action="MakeDonation" method="post">
    @Html.AntiForgeryToken()

    <div>
        <label asp-for="Amount">Amount</label>
        <input asp-for="Amount" type="number" step="0.01" required />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Type">Donation Type</label>
        <select asp-for="Type" required>
            <option value="">-- Select Type --</option>
            <option value="Money">Money</option>
            <option value="Goods">Goods</option>
            <option value="Food">Food</option>
            <option value="Clothing">Clothing</option>
            <option value="Other">Other</option>
        </select>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" rows="4" required></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit">Donate</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}