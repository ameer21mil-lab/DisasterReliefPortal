@model YourNamespace.Models.SendMessageViewModel

@{
    ViewData["Title"] = "Send Message";
}

<h2>Send Message</h2>

<form asp-action="SendMessage" method="post">
    <div class="form-group">
        <label asp-for="Recipient" class="control-label"></label>
        <select asp-for="Recipient" class="form-control" asp-items="Model.RecipientOptions">
            <option value="">Select Recipient</option>
        </select>
        <span asp-validation-for="Recipient" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Message" class="control-label"></label>
        <textarea asp-for="Message" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Message" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Send" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
